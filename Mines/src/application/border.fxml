<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Bloom?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="vbox" alignment="CENTER" prefHeight="1600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="59.0" prefWidth="850.0" text="Mine Sweeper" textAlignment="CENTER" textFill="#04063e9c" wrapText="true">
         <font>
            <Font name="Californian FB Bold" size="96.0" />
         </font>
         <effect>
            <Bloom threshold="0.81" />
         </effect>
      </Label>
      <HBox fx:id="hbox" alignment="CENTER" prefHeight="36.0" prefWidth="800.0" style="-fx-background-color: black;">
         <children>
            <Label prefHeight="18.0" prefWidth="40.0" text="Height" textFill="WHITE">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin></Label>
            <TextField fx:id="Height" prefHeight="26.0" prefWidth="98.0" />
            <Label text="Width" textFill="WHITE">
               <HBox.margin>
                  <Insets left="10.0" right="2.0" />
               </HBox.margin></Label>
            <TextField fx:id="Width" layoutX="60.0" layoutY="47.0" prefHeight="26.0" prefWidth="98.0" />
            <Label text="Mines" textFill="WHITE">
               <HBox.margin>
                  <Insets left="10.0" right="2.0" />
               </HBox.margin></Label>
            <TextField fx:id="Mines" layoutX="122.0" layoutY="47.0" prefHeight="26.0" prefWidth="98.0" />
            <Button fx:id="restart" mnemonicParsing="false" onAction="#regame" prefHeight="26.0" prefWidth="71.0" text="Start">
               <HBox.margin>
                  <Insets left="4.0" />
               </HBox.margin>
               <font>
                  <Font name="Arial Italic" size="12.0" />
               </font>
            </Button>
            <Label fx:id="counter" alignment="CENTER" contentDisplay="CENTER" prefHeight="38.0" prefWidth="57.0" textAlignment="CENTER" textFill="#fffffff7">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
               <font>
                  <Font name="Arial Black" size="18.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <Label fx:id="info" alignment="CENTER" contentDisplay="CENTER" prefHeight="18.0" prefWidth="804.0" textAlignment="CENTER" VBox.vgrow="NEVER" />
   </children>
</VBox>
